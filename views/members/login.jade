block head
	script(src="/javascripts/members.js")

block content
	p.error= message
	form(action="/login", method="post")
		p Username: 
			input(type="text", name="username", autofocus="autofocus")
		p Password: 
			input(type="password", name="password")
		p
			input.button.big(type="submit", value="Log In")