extends ../layout
block content
	h1 My Records
	p First Name:
		input(
			type="text",
			disabled="disabled",
			value=member.name.first
		)
	p Last Name:
		input(
			type="text",
			disabled="disabled",
			value=member.name.last
		)
	p Username:
		input(
			type="text",
			disabled="disabled",
			value=member.account.username
		)
	p Password:
		input(
			type="password",
			disabled="disabled",
			value="123456"
		)
		a(href="/me/change_password") Change Password
	p Login Enabled:
		input(
			type="checkbox",
			disabled="disabled",
			value="true",
			checked=(member.account.login_enabled)? "checked" : undefined
		)
	p Unit:
		input(
			type="text",
			disabled="disabled",
			value=member.unit
		)
	p Training Corps:
		input(
			type="checkbox", 
			disabled="disabled",
			value="true",
			checked=(member.status.training_corps)? "checked" : undefined
		)
